    <label for="nome">Nome da Skill:</label>
    <input id="nome" class="form-control" @bind="@novaSkill.Nome" />
</div>

<div class="form-group">
    <label for="areaProfissional">Área Profissional:</label>
    <select id="areaProfissional" class="form-control" @bind="@novaSkill.AreaProfissional">
        @foreach (var area in areasProfissionais)
        {
            <option value="@area">@area</option>
        }
    </select>
</div>

<button class="btn btn-primary" @onclick="CriarSkill">Criar</button>

